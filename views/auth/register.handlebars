<div class="container-auth">
  <h2>Registrar</h2>
  <form action="/register" method="POST">
    <div class="form-control-v2">
      <label for="text">Nome:</label>
      <input type="name" name="name" placeholder="Digite o seu nome" required />
    </div>
    <div class="form-control-v2">
      <label for="email">E-mail:</label>
      <input
        type="email"
        name="email"
        placeholder="Digite o seu e-mail"
        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
        required
      />
    </div>
    <div class="form-control-v2">
      <label for="phoneComplete">DDD + telefone:</label>
      <input
        type="tel"
        name="phoneComplete"
        class="phone"
        placeholder="Ex: 84998745721"
        pattern=".{13,15}"
        required
      />
    </div>
    <div class="form-control-v2">
      <label for="password">Senha:</label>
      <input
        type="password"
        name="password"
        placeholder="tamanho 4-8"
        pattern=".{4,8}"
        required
      />
    </div>
    <div class="form-control-v2">
      <label for="confirmpassword">Confirmação de senha:</label>
      <input
        type="password"
        name="confirmpassword"
        placeholder="Confirme a sua senha"
        required
      />
    </div>
    <input type="submit" value="Cadastrar" />
    <p>Já tem conta? <a href="/login">Clique aqui</a></p>
  </form>
</div>