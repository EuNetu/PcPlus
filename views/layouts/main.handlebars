<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="/img/PCPLUS_ICON.svg"
      type="image/svg+xml"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>PcPlus</title>
  </head>
  <body>
    <nav id="navbar">
      <a href="/" id="logo">
        <img src="/img/PCPLUS.png" alt="logo Pc Plus" />
      </a>
      <ul>
        <li><a href="/">Postagens</a></li>
        {{#if session.userid}}
          <li><a href="/posts/dashboard">Dashboard</a></li>
          <li><a href="/logout">Sair</a></li>
        {{else}}
          <li><a href="/login">Entrar</a></li>
          <li><a href="/register">Registrar</a></li>
        {{/if}}
      </ul>
    </nav>
    {{#if messages.message}}
      <div class="message">
        {{messages.message}}
      </div>
    {{/if}}
    <div class="container">
      {{{body}}}    
    </div>
    <footer>
      <span>PC PLUS</span>
      <p><strong>&copy; Todos os direitos reservados - 2023</strong></p>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/inputEfectCheck.js"></script>
    <script src="/js/masks.js"></script>
  </body>
</html>